<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Product>次元超越通用仓储源生成翻译控制台工具</Product>
		<OutputType>Exe</OutputType>
		<DefineConstants>PROJ_TRANSLATE;$(DefineConstants)</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Release'">
		<AllowedReferenceRelatedFileExtensions>
			<!-- Prevent default XML and PDB files copied to output in RELEASE. 
           		 Only *.allowedextension files will be included, which doesn't exist in my case.
       		-->
			.allowedextension
		</AllowedReferenceRelatedFileExtensions>
		<DebugType>none</DebugType>
		<DebugSymbols>false</DebugSymbols>
	</PropertyGroup>

	<ItemGroup>
		<Compile Include="..\Translate.cs">
			<LinkBase>Helpers</LinkBase>
		</Compile>
		<Compile Include="..\Utils.cs">
			<LinkBase>Helpers</LinkBase>
		</Compile>
		<Compile Include="..\BD.Common.Repositories.SourceGenerator\Models\GeneratorConfig.cs">
			<LinkBase>Models</LinkBase>
		</Compile>
		<Compile Include="..\BD.Common.Repositories.SourceGenerator\Constants.cs" />
		<Compile Include="..\BD.Common.Repositories.SourceGenerator\Properties\ImplicitUsings.cs">
			<LinkBase>Properties</LinkBase>
		</Compile>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Newtonsoft.Json" />
		<PackageReference Include="Humanizer.Core" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\BD.Common\BD.Common.csproj" />
	</ItemGroup>

	<Import Project="..\TFM_NETX.props" />

</Project>
