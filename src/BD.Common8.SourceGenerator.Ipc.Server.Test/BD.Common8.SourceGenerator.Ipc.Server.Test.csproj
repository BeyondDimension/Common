		<TargetFramework>net$(DotNet_Version)</TargetFramework>
		<UseAspNetCore>true</UseAspNetCore>
		<GenerateSatelliteAssembliesForCore>false</GenerateSatelliteAssembliesForCore>
		<UseProjectUtils>true</UseProjectUtils>
	</PropertyGroup>

	<ItemGroup>
		<Compile Include="..\Ipc.Server.Sample.Experimental\ITodoService.cs">
			<LinkBase>Services</LinkBase>
		</Compile>
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\BD.Common8.SourceGenerator.Ipc.Server\BD.Common8.SourceGenerator.Ipc.Server.csproj">
		  <OutputItemType>Analyzer</OutputItemType>
		  <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
	  </ProjectReference>
	</ItemGroup>

	<Import Project="../Sdk/BD.Common8.Bcl.props" />
	<Import Project="../Sdk/BD.Common8.Ipc.props" />
	<Import Project="../Sdk/BD.Common8.Primitives.ApiRsp.props" />
	<Import Project="../Sdk/BD.Common8.Ipc.Server.props" />

</Project>
