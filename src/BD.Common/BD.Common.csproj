<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Product>次元超越通用基类库</Product>
		<PackageTags>BeyondDimension Common CommonBase</PackageTags>
		<Description>$(Product)</Description>
		<RootNamespace>System</RootNamespace>
		<DefineConstants>BASE_CLASS_LIB_EX;__NOT_IMPORT_CONFIG__;__NOT_IMPORT_WEBENCODERS__;__HAVE_N_JSON__;$(DefineConstants)</DefineConstants>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	</PropertyGroup>

	<ItemGroup>
		<Compile Remove="_\HexMate\**" />
		<EmbeddedResource Remove="_\HexMate\**" />
		<None Remove="_\HexMate\**" />
	</ItemGroup>

	<ItemGroup>
		<Compile Include="..\ImplicitUsings.MSEX.cs">
			<LinkBase>Properties</LinkBase>
		</Compile>
		<Compile Include="..\ImplicitUsings.Resources.cs">
			<LinkBase>Properties</LinkBase>
		</Compile>
		<Compile Include="..\ImplicitUsings.JsonProperty.cs">
			<LinkBase>Properties</LinkBase>
		</Compile>
		<Compile Include="..\ImplicitUsings.MessagePack.cs">
			<LinkBase>Properties</LinkBase>
		</Compile>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Avalonia" />
		<PackageReference Include="Nito.Comparers" />
		<PackageReference Include="gfoidl.Base64" />
		<PackageReference Include="Crc32.NET" />
		<PackageReference Include="MessagePack" />
		<PackageReference Include="MemoryPack" />
		<PackageReference Include="Newtonsoft.Json" />
		<PackageReference Include="Microsoft.Extensions.DependencyInjection" />
		<PackageReference Include="Microsoft.Extensions.Logging" />
		<!--https://github.com/dotnet/runtime/issues/66863-->
		<!--https://devblogs.microsoft.com/dotnet/performance-improvements-in-dotnet-maui/#remove-microsoft-extensions-http-usage-->
		<!--<PackageReference Include="Microsoft.Extensions.Http" />-->
		<!--https://devblogs.microsoft.com/dotnet/performance-improvements-in-dotnet-maui/#remove-microsoft-extensions-hosting-->
		<!--<PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" />-->
		<PackageReference Include="OperatingSystem2" />
		<PackageReference Include="Polly" />
		<PackageReference Include="Nito.AsyncEx.Coordination" />
		<PackageReference Include="System.IO.Pipelines" />
		<PackageReference Include="Splat.Drawing" />
	</ItemGroup>

	<ItemGroup Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">
		<PackageReference Include="PInvoke.IPHlpApi" />
		<PackageReference Include="PInvoke.AdvApi32" />
		<PackageReference Include="PInvoke.Kernel32" />
		<PackageReference Include="Vanara.PInvoke.WinHTTP" />
	</ItemGroup>

	<ItemGroup>
		<Compile Update="Resources\Strings.Designer.cs">
			<DesignTime>True</DesignTime>
			<AutoGen>True</AutoGen>
			<DependentUpon>Strings.resx</DependentUpon>
		</Compile>
	</ItemGroup>

	<ItemGroup>
		<EmbeddedResource Update="Resources\Strings.resx">
			<Generator>ResXFileCodeGenerator</Generator>
			<LastGenOutput>Strings.Designer.cs</LastGenOutput>
			<CustomToolNamespace></CustomToolNamespace>
		</EmbeddedResource>
	</ItemGroup>

	<ItemGroup>
		<!--<ProjectReference Include="..\Avalonia.Base\Avalonia.Base.csproj">
			<IncludeAssets>none</IncludeAssets>
		</ProjectReference>-->
		<Compile Include="..\AssemblyInfo.Xaml.cs">
			<LinkBase>Properties</LinkBase>
		</Compile>
		<!--<Content Include="..\..\ref\Avalonia.Base.dll">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
			<Pack>true</Pack>
			<PackagePath>lib/net$(DotNet_Version)/Avalonia.Base.dll;lib/net$(DotNet_Version)-android/Avalonia.Base.dll</PackagePath>
		</Content>-->
	</ItemGroup>

	<Import Project="..\TFM_NETX_WITH_ALL.props" />
	<Import Project="..\GeneratePackage.props" />

</Project>